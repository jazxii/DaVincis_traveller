<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".qstns2">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="150dp"
        android:layout_height="305dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="33dp"
        android:background="#535353"
        app:cardBackgroundColor="#4A4A4A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="51dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5" />

    <Button
        android:id="@+id/nxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="163dp"
        android:text="@string/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="85dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/choose_your_options"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="150dp"
        android:layout_height="305dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="31dp"
        android:background="#535353"
        app:cardBackgroundColor="#4A4A4A"
        app:layout_constraintEnd_toStartOf="@+id/cardView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14">

        <CheckBox
            android:id="@+id/ck2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginTop="51dp"
            android:background="@color/black"
            android:text="@string/casual"
            android:textColor="#FFFFFF"
            android:translationX="-15dp"
            android:translationY="30dp"
            app:buttonTint="#BD05FF" />

        <CheckBox
            android:id="@+id/ck3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginTop="44dp"
            android:background="@color/black"
            android:text="@string/trip"
            android:textColor="#FFFFFF"
            android:translationX="-15dp"
            android:translationY="105dp"
            app:buttonTint="#BD05FF" />

        <CheckBox
            android:id="@+id/ck4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="192dp"
            android:background="@color/black"
            android:text="@string/sports"
            android:textColor="#FFFFFF"
            android:translationX="-15dp"
            android:translationY="30dp"
            app:buttonTint="#BD05FF" />

        <CheckBox
            android:id="@+id/ck1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="@string/bussiness"
            android:textColor="#FFFFFF"
            android:translationX="33dp"
            android:translationY="20dp"
            app:buttonTint="#BD05FF" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>